{
  "infoPage": {
    "match": "/^http:\\/\\/www\\.heiyan\\.com\\/book\\/\\d+$/i.test($.location())",
    "indexPage": "$.location()+'/chapter'",
    "footer": "!!$('.footer').length",
    "bookInfos": {
      "origin": "$.location()",
      "title": "$('h2').eq(0).text().trim()",
      "author": "$('a.name strong').text().trim()",
      "classes": "$('.cate > a').text()",
      "isend": "!$('.is-serialize').length",
      "cover": "$.location($('.pic img').attr('src'))",
      "brief": "$('.summary .note').html()"
    }
  },
  "indexPage": {
    "match": "/^http:\\/\\/www\\.heiyan\\.com\\/book\\/\\d+\\/chapter$/i.test($.location())",
    "infoPage": "$.location().replace('/chapter','')",
    "footer": "!!$('.footer').length",
    "filter": "$('.isvip').remove()",
    "bookIndexs": "$('ul.float-list > li > a').map((i,v)=>({href:'http://a.heiyan.com/ajax/chapter/content/' + $(v).attr('href').split('/').pop(),text:$(v).text()})).toArray()"
  },
  "contentPage": {
    "match": "true",
    "footer": "true",
    "chapterInfos": {
      "source": "$.location()",
      "content": "/ajax/i.test($.location()) && JSON.parse($.html()).chapter.htmlContent"
    }
  }
}